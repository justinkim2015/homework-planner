<%= form_with model: @lesson do |f| %>
  <%= f.label :rank %>
  <%= f.text_field :rank %>

  <%= f.label :time %>
  <%= f.time_field :time %>

  <%= f.label :date %>
  <%= f.select :date, ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'] %>
  <br>

  <%= f.fields_for :assignments do |sf| %>
    <%= sf.label :name %>
    <%= sf.text_field :name %>

    <%= sf.label :length %>
    <%= sf.number_field :length %>
    <br>
  <% end %>

  <%= f.submit %>
<% end %>

