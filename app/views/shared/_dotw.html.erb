<ul>
  <% @lessons.each do |lesson| %>
    <% if lesson.date == day %>
      <li>
        <div class="is-flex">
          <%= link_to lesson.info, lesson_path(lesson.id), class: "has-text-black" %> 
          <% lesson.assignments.each do |assignment| %>
            <% if assignment.time_remaining <= 7 %>
              <div class="has-text-danger-dark ml-2">Order new homework!</div>
            <% end %>
          <% end %>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>      
